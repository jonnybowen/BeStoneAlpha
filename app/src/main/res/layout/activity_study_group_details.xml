<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameStudyGroupDetails"
        android:layout_width="364dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Name of Study Group"
        android:textColor="?attr/textColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/hostProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameStudyGroupDetails"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/groupLeaderUsername"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="USERNAME"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/hostProfilePicture"
        app:layout_constraintStart_toStartOf="@+id/nameStudyGroupDetails"
        app:layout_constraintTop_toBottomOf="@+id/nameStudyGroupDetails" />

    <RatingBar
        android:id="@+id/hostRating"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/subjectBar"
        app:layout_constraintEnd_toStartOf="@+id/hostProfilePicture"
        app:layout_constraintStart_toStartOf="@+id/groupLeaderUsername"
        app:layout_constraintTop_toBottomOf="@+id/groupLeaderUsername" />

    <TextView
        android:id="@+id/subjectBar"
        android:layout_width="358dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="SUBJECT BAR"
        android:textColor="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostProfilePicture" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="219dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="DATE/TIME"
        android:textColor="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectBar" />

    <TextView
        android:id="@+id/summaryOfStudy"
        android:layout_width="353dp"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="SUMMARY OF STUDY GROUP"
        android:textColor="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTime" />

    <TextView
        android:id="@+id/attendees"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ATTENDEES"
        android:textColor="?attr/metaTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summaryOfStudy" />

    <Button
        android:id="@+id/attendButton"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="?attr/bgColor"
        android:text="ATTEND"
        android:textColor="?attr/textColor"
        app:layout_constraintStart_toEndOf="@+id/attendees"
        app:layout_constraintTop_toBottomOf="@+id/summaryOfStudy" />
</androidx.constraintlayout.widget.ConstraintLayout>